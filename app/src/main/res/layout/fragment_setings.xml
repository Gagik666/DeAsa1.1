<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ff7961"
    android:padding="25dp"
    tools:context=".screens.SetingsFragment">

    <TextView
        android:id="@+id/tvSetings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffee58"
        android:text="SETINGS"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/imgLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_log_in"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSetings"/>

    <TextView
        android:id="@+id/tvLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/log_in"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:visibility="gone"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvSetings"
        app:layout_constraintStart_toEndOf="@id/imgLogIn"/>

    <ImageView
        android:id="@+id/imgLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_log_out"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSetings"/>

    <TextView
        android:id="@+id/tvlogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/log_out"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_marginStart="32dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvSetings"
        app:layout_constraintStart_toEndOf="@id/imgLogOut"/>
</androidx.constraintlayout.widget.ConstraintLayout>